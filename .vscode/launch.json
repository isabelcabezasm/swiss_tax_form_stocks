    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python Debugger: Current File",
            "type": "debugpy",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal"
        },
        {
            "name": "Tax Form Stocks",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/tax_form/main.py",
            "console": "integratedTerminal",
            "args": [
                "--vested-pdf", "data/salary_certificate.pdf",
                "--sold-pdf", "data/Custom transaction summary - Fidelity NetBenefits_ only sales.pdf",
                "--show-individual"
            ],
            "cwd": "${workspaceFolder}"
        }
    ]
}